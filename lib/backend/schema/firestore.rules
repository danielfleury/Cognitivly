rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{document} {
      allow create: if true;
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /session_notes/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /session_audio/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /note_messages/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /usercodes/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /patient_documents/{document} {
      allow create: if request.auth != null;
      allow read: if resource.data.therapist == /databases/$(database)/documents/users/$(request.auth.uid);
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /note_templates/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /custom_note_generations/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /patient_assessments/{document} {
      allow create: if request.auth != null;
      allow read: if resource.data.patient == /databases/$(database)/documents/users/$(request.auth.uid);
      allow write: if request.auth != null;
      allow delete: if resource.data.patient == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /patient_assessment_chats/{document} {
      allow create: if request.auth != null;
      allow read: if resource.data.patient == /databases/$(database)/documents/users/$(request.auth.uid);
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /phq9/{document} {
      allow create: if request.auth != null;
      allow read: if resource.data.therapist == /databases/$(database)/documents/users/$(request.auth.uid);
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /gad7/{document} {
      allow create: if request.auth != null;
      allow read: if resource.data.therapist == /databases/$(database)/documents/users/$(request.auth.uid);
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
  }
}
